<Window x:Class="WPF_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" Margin="0,70,0,70">
            <Button Margin="0,15,0,15" Padding="10,10,10,10" Content="Game"/>
            <Button Margin="0,15,0,15" Padding="10,10,10,10" Content="Studio"/>
            <Button Margin="0,15,0,15" Padding="10,10,10,10" Content="Minrequ"/>
            <Button Margin="0,15,0,15" Padding="10,10,10,10" Content="Stat"/> 
        </StackPanel>


    </Grid>
</Window>
